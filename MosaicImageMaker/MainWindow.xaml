<Window x:Name="mainWindow" x:Class="WpfAppSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="352.333" Width="599.333">
    <StackPanel x:Name="LayoutRoot" Orientation="Vertical" Margin="0,0,2,3">
        <StackPanel Orientation="Horizontal">
            <TextBlock Height="23" x:Name="TextBlock_TgtImgDir" Text="目標画像" HorizontalAlignment="Left" Margin="10,10,0,10" Width="75" />
            <TextBox Height="24" Name="TextBox_TgtImgDir" Width="533" HorizontalAlignment="Left"  Text="目標画像 ファイルパス を設定してください。" Margin="10,10,0,10" />
            <Button Content="..." Height="24" Width="23"   HorizontalAlignment="Left" Margin="10,10,0,10" Click="SetTgtPath_Click" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBox Height="24" Name="TextBox_SecImgDir" Width="533" HorizontalAlignment="Left"  Text="素材画像 格納フォルダ を設定してください。" Margin="10,10,0,10" />
            <Button Content="..." Height="24" Width="23"   HorizontalAlignment="Left" Margin="10,10,0,10" Click="SetSrcDir_Click" />
        </StackPanel>
        <TextBlock Height="23" x:Name="TextBlock_DrcImgCnt"  HorizontalAlignment="Left" Margin="10,0,0,10" Width="569" ><Run Text="素材画像"/><Run Text="は 100枚以上でお願いします。"/></TextBlock>
        <StackPanel Orientation="Horizontal">
            <TextBox Height="24" Name="TextBox_DstImgDir" Width="533" HorizontalAlignment="Left"  Text="出力画像 ファイルパス を設定してください。" Margin="10,10,0,10"  />
            <Button Content="..." Height="24" Width="23"   HorizontalAlignment="Left" Margin="10,10,0,10" Click="SetDstPath_Click" />
        </StackPanel>
        <Button Content="実行" Height="40" Width="75" HorizontalAlignment="Left" Margin="10,10,0,10" Click="Button_Click_1" />
        <ProgressBar Height="20" x:Name="progressBar1"  VerticalAlignment="Top" Margin="10,0,10,10" />
        <ProgressBar Height="20" x:Name="progressBar2"  VerticalAlignment="Top" Margin="10,0,10,10" />
        <TextBlock Height="23" x:Name="TextBlock_Report" Text="進捗状況"  HorizontalAlignment="Left" Margin="10,0,0,10" Width="569" />

    </StackPanel>
</Window>
