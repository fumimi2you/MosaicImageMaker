<Window x:Name="mainWindow" x:Class="MosaicImageMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MosaicImageMaker" Height="400" Width="700" BorderBrush="Black">
    <StackPanel x:Name="LayoutRoot" Orientation="Vertical" Margin="0,0,0,0" Background="#FF383838">
        <StackPanel Orientation="Horizontal" Height="32" Margin="10,20,10,10">
            <Border BorderBrush="{x:Null}" Height="24">
                <TextBlock x:Name="TextBlock_TgtImgDir" Width="100" Text="目標画像パス" VerticalAlignment="Center" Foreground="#FFB2C3FF" OpacityMask="#FFB2C3FF" TextDecorations="{x:Null}" FontFamily="Meiryo UI"/>
            </Border>
            <TextBox x:Name="TextBox_TgtImgDir" Width="520" HorizontalAlignment="Left"  Text="目標画像 ファイルパス を設定してください。" Margin="10,0,0,0" VerticalContentAlignment="Center" Background="#FFD1D1D1" SelectionBrush="White" FontFamily="Meiryo UI" LostFocus="TextBox_TgtImgDir_LostFocus"/>
            <Button Content="..." Width="32"   HorizontalAlignment="Left"  Click="SetTgtPath_Click" Height="32" VerticalAlignment="Bottom" Background="#FFECECEC" BorderBrush="#FFB2C3FF" Foreground="Black" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="32" Margin="10,10,10,10">
            <Border BorderBrush="{x:Null}" Height="24">
                <TextBlock x:Name="TextBlock_SecImgDir" Width="100" Text="素材画像フォルダ" VerticalAlignment="Center" Foreground="#FFB2C3FF" OpacityMask="#FFB2C3FF" TextDecorations="{x:Null}" FontFamily="Meiryo UI"/>
            </Border>
            <TextBox Name="TextBox_SecImgDir" Width="520" HorizontalAlignment="Left"  Text="素材画像 格納フォルダ を設定してください。" Margin="10,0,0,0" VerticalContentAlignment="Center" Background="#FFD1D1D1" SelectionBrush="White" FontFamily="Meiryo UI" LostFocus="TextBox_SecImgDir_LostFocus" />
            <Button Content="..." Width="32"   HorizontalAlignment="Left"  Click="SetSrcDir_Click" Background="#FFECECEC" BorderBrush="#FFB2C3FF" Foreground="Black" />
        </StackPanel>
        <TextBlock Height="24" x:Name="TextBlock_DrcImgCnt"  HorizontalAlignment="Left" Margin="150,0,0,0" Width="540" Text="素材画像は 100枚以上でお願いします。" Foreground="#FFFFF8B2" FontFamily="Meiryo UI"/>
        <StackPanel Orientation="Horizontal" Height="32" Margin="10,10,10,10">
            <Border BorderBrush="{x:Null}" Height="32" OpacityMask="#FFB2C3FF">
                <TextBlock x:Name="TextBlock_DstImgDir" Width="100" Text="出力画像パス" VerticalAlignment="Center" Foreground="#FFFFB2F4" TextDecorations="{x:Null}" FontFamily="Meiryo UI"/>
            </Border>
            <TextBox Name="TextBox_DstImgDir" Width="520" HorizontalAlignment="Left"  Text="出力画像 ファイルパス を設定してください。" Margin="10,0,0,0" VerticalContentAlignment="Center" Background="#FFD1D1D1" SelectionBrush="White" FontFamily="Meiryo UI" LostFocus="TextBox_DstImgDir_LostFocus" />
            <Button Content="..." Width="32"   HorizontalAlignment="Left"  Click="SetDstPath_Click" Background="#FFECECEC" BorderBrush="#FFB2C3FF" Foreground="Black" />
        </StackPanel>
        <Button Name="Button_Execute" Content="Execute" Height="50" Width="200" HorizontalAlignment="Center" Margin="20,20,10,20" Click="Button_Execute_Click" Background="#FFD0FFBA" BorderBrush="#FFB2C3FF" Foreground="Black" FontSize="24" FontFamily="Meiryo UI" FontWeight="Bold" />
        <ProgressBar Height="20" x:Name="progressBar1"  VerticalAlignment="Top" Margin="10,0,10,10" />
        <ProgressBar Height="20" x:Name="progressBar2"  VerticalAlignment="Top" Margin="10,0,10,10" />
        <TextBlock Height="23" x:Name="TextBlock_Report" Text="進捗状況"  HorizontalAlignment="Left" Margin="10,0,0,10" Width="678" Foreground="#FFB9FFB2" OpacityMask="#FFB2C3FF" FontFamily="Meiryo UI" />

    </StackPanel>
</Window>
