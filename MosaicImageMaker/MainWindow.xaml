<Window x:Name="mainWindow" x:Class="MosaicImageMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="380" Width="700">
    <StackPanel x:Name="LayoutRoot" Orientation="Vertical" Margin="0,0,2,0">
        <StackPanel Orientation="Horizontal" Height="32" Margin="10,10,10,10">
            <Border BorderBrush="{x:Null}" Height="24">
                <TextBlock x:Name="TextBlock_TgtImgDir" Width="100" Text="目標画像パス" VerticalAlignment="Center"/>
            </Border>
            <TextBox x:Name="TextBox_TgtImgDir" Width="520" HorizontalAlignment="Left"  Text="目標画像 ファイルパス を設定してください。" Margin="10,0,0,0" VerticalContentAlignment="Center" />
            <Button Content="..." Width="32"   HorizontalAlignment="Left"  Click="SetTgtPath_Click" Height="32" VerticalAlignment="Bottom" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="32" Margin="10,10,10,10">
            <Border BorderBrush="{x:Null}" Height="24">
                <TextBlock x:Name="TextBlock_SecImgDir" Width="100" Text="素材画像フォルダ" VerticalAlignment="Center"/>
            </Border>
            <TextBox Name="TextBox_SecImgDir" Width="520" HorizontalAlignment="Left"  Text="素材画像 格納フォルダ を設定してください。" Margin="10,0,0,0" VerticalContentAlignment="Center" />
            <Button Content="..." Width="32"   HorizontalAlignment="Left"  Click="SetSrcDir_Click" />
        </StackPanel>
        <TextBlock Height="24" x:Name="TextBlock_DrcImgCnt"  HorizontalAlignment="Left" Margin="150,0,0,0" Width="540" Text="素材画像は 100枚以上でお願いします。"/>
        <StackPanel Orientation="Horizontal" Height="32" Margin="10,10,10,10">
            <Border BorderBrush="{x:Null}" Height="32">
                <TextBlock x:Name="TextBlock_DstImgDir" Width="100" Text="出力画像パス" VerticalAlignment="Center"/>
            </Border>
            <TextBox Name="TextBox_DstImgDir" Width="520" HorizontalAlignment="Left"  Text="出力画像 ファイルパス を設定してください。" Margin="10,0,0,0" VerticalContentAlignment="Center"  />
            <Button Content="..." Width="32"   HorizontalAlignment="Left"  Click="SetDstPath_Click" />
        </StackPanel>
        <Button Content="実行" Height="40" Width="108" HorizontalAlignment="Left" Margin="20,20,10,20" Click="Button_Click_1" />
        <ProgressBar Height="20" x:Name="progressBar1"  VerticalAlignment="Top" Margin="10,0,10,10" />
        <ProgressBar Height="20" x:Name="progressBar2"  VerticalAlignment="Top" Margin="10,0,10,10" />
        <TextBlock Height="23" x:Name="TextBlock_Report" Text="進捗状況"  HorizontalAlignment="Left" Margin="10,0,0,10" Width="678" />

    </StackPanel>
</Window>
